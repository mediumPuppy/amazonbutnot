@using amazonbutnot.Models.ViewModels
@model ProductReviewViewModel
@{
    ViewData["Title"] = "Product Review";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="banner text-center">
                Product Review
            </div>
        </div>
    </div>

    <!-- Add Product Button -->
    <br />
    <div class="row justify-content-center mb-4">
        <div class="col-lg-12">
            <a asp-action="AddProduct" asp-controller="Orders" class="btn btn-success">Add a Product</a>
        </div>
    </div>

    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="@product.img_link" class="card-img-top" alt="@product.name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h4 class="card-title fs-5 single-line-ellipsis">@product.name</h4>
                        <h5 class="text-black text-left">$@product.price</h5>
                        <div>
                            <a class="btn btn-subtle-gray" asp-action="EditProduct" asp-controller="Orders" asp-route-id="@product.product_ID">Edit</a>
                            <a asp-action="DeleteProduct" asp-controller="Orders" asp-route-product_ID="@product.product_ID" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="pagination justify-content-center mt-4">
        <div page-model="@Model.PaginationInfo" page-action="ProductReview" page-classes-enabled="true" page-class="btn"
             page-class-normal="btn-outline-dark" page-class-selected="btn-dark" class="btn-group m-1">
        </div>
    </div>
</div>
