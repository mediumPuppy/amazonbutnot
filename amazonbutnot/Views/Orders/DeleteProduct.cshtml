@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="banner text-center">
                Delete Product
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="post" asp-action="DeleteProductConfirmed" asp-controller="Orders" asp-route-product="@Model">
                <div class="mb-3">
                    <input type="hidden" asp-for="product_ID" />
                    <p>Are you sure you want to delete this product?</p>
                    <h4>@Model.name</h4>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="ProductReview" asp-controller="Orders" class="btn btn-secondary">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>
