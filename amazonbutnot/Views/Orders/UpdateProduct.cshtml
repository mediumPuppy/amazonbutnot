@model Product

@{
    ViewData["Title"] = "Update Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="banner text-center">
                Update Product
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="post" asp-action="UpdateProduct" asp-controller="Orders">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" asp-for="name" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price" asp-for="price" required>
                </div>
                <div class="mb-3">
                    <label for="num_parts" class="form-label">Number of Parts</label>
                    <input type="number" class="form-control" id="num_parts" name="num_parts" asp-for="num_parts" required>
                </div>
                <div class="mb-3">
                    <label for="img_link" class="form-label">Image Link</label>
                    <input type="text" class="form-control" id="img_link" name="img_link" asp-for="img_link" required>
                </div>
                <input type="hidden" asp-for="product_ID" />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

        </div>
    </div>
</div>
