@model RoleManagementViewModel

<h2>Roles List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <!-- Example of actions you might want to include -->
                    <a href="@Url.Action("EditRole", "Admin", new { roleId = role.Id })" class="btn btn-info">Edit</a>
                    <a href="@Url.Action("ConfirmDelete", "Admin", new { roleId = role.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>Add New Role</h2>
<form asp-controller="Admin" asp-action="AddRole" method="post">
    <div class="form-group">
        <label for="NewRoleName">Role Name</label>
        <input type="text" class="form-control" id="NewRoleName" name="newRoleName" />
    </div>
    <button type="submit" class="btn btn-success">Add Role</button>
</form>
