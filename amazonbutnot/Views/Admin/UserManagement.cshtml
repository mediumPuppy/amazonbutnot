@model UserManagementViewModel


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Users</h2>
<table class="table">
    <tr>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                @* <a href="@Url.Action("EditUser", "Admin", new { userId = user.Id })" class="btn btn-primary">Edit</a> *@
                <a href="@Url.Action("DeleteUser", "Admin", new { userId = user.Id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-success" asp-area="Identity" asp-page="/Account/Register">Add New User</a>
