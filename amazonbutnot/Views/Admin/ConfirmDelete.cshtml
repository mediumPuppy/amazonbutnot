@model RoleManagementViewModel

<h2>Confirm Delete</h2>
<p>Are you sure you want to delete the role "@Model.NewName"?</p>

<form asp-controller="Admin" asp-action="DeleteRole" method="post">
    <input type="hidden" name="roleId" value="@Model.RoleId" />
    <button type="submit" class="btn btn-danger">Confirm</button>
    <a href="@Url.Action("AdminUsers", "Admin")" class="btn btn-secondary">Cancel</a>
</form>
