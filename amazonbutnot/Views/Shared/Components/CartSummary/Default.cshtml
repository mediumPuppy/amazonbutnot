@{
}

@model Cart


<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>@Model.Lines.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }
    <div class="navbar-nav">
        <a class="nav-link text-dark" href="/cart">
            <img src="~/img/Cart.png" alt="Cart" style="width: 24px; height: 24px;">
        </a>
    </div>
</div>