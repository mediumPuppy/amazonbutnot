@{
}
@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-categoryName="" asp-route-pageNum="">Home</a>

    @foreach (string c in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(c == ViewBag.SelectedCateogies ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Index" asp-route-categoryName="@c" asp-route-pageNum="1">@c</a>
    }
</div>